{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Wave",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#main_function" },
    { "include": "#functions" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-slash.wave", "match": "//.*$" },
        { "name": "comment.block.wave", "begin": "/\\*", "end": "\\*/" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.wave",
          "match": "\\b(fun|var|let|mut|return|if|else|while|continue|break|import)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.wave",
          "match": "\\b(i32|f32|str|bool)\\b"
        }
      ]
    },
    "main_function": {
      "patterns": [
        {
          "name": "entity.name.function.main.wave",
          "match": "\\bmain\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.wave",
          "match": "\\b(print|println|transform|display_pattern|process)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.wave",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.wave",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.wave",
          "match": "\\\\."
        },
        {
          "name": "variable.parameter.format.wave",
          "match": "\\{\\}"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.wave",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.wave",
          "match": "!=|==|<=|>=|<|>|\\+|\\-|\\*|\\/|%|\\+=|\\-=|\\*=|\\/=|&&|\\|\\||!"
        }
      ]
    }
  },
  "scopeName": "source.wave"
}
